<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.StubFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/under_develop_one"
        android:paddingHorizontal="@dimen/sixteen_dp"
        android:contentDescription="@string/under_develop"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/back_icon"
        android:layout_width="@dimen/thirty_three_dp"
        android:layout_height="@dimen/thirty_three_dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_2f3035"
        android:layout_marginStart="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        app:cardCornerRadius="@dimen/fifty_dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/back_button"
            app:srcCompat="@drawable/ic_back_arrow_24" />

    </androidx.cardview.widget.CardView>

</FrameLayout>