<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/eight_dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/hint_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_hard_route_hint_48"
        android:layout_gravity="center"
        android:contentDescription="@string/point_image"/>

    <TextView
        android:id="@+id/hint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/eight_dp"
        android:textSize="@dimen/fourteen_sp"
        android:textColor="@color/color_d9d9d9"
        tools:text="@string/hard_route" />

</LinearLayout>