<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingTop="@dimen/sixteen_dp"
    >

    <com.example.resources.views.HintView
        android:id="@+id/hard_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:hintIcon="@drawable/ic_hard_route_hint_48"
        app:hintText="@string/hard_route"
        />

    <com.example.resources.views.HintView
        android:id="@+id/anywhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:hintIcon="@drawable/ic_anywhere_hint_48"
        app:hintText="@string/anywhere"
        />

    <com.example.resources.views.HintView
        android:id="@+id/weekend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:hintIcon="@drawable/ic_weekend_hint_48"
        app:hintText="@string/weekend"
        />

    <com.example.resources.views.HintView
        android:id="@+id/burnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:hintIcon="@drawable/ic_burnings_hint_48"
        app:hintText="@string/burning_tickets"
        />

</LinearLayout>