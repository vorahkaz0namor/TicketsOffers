<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.UnderlinedTextField" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/color_9f9f9f</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/seventeen_dp</item>
        <item name="android:paddingVertical">@dimen/sixteen_dp</item>
    </style>

    <style name="Widget.AppTheme.AdviceTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">@dimen/eight_dp</item>
    </style>

    <style name="Widget.AppTheme.TextOnDetailCard" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.AppTheme.DetailCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_2f3035</item>
        <item name="cardCornerRadius">@dimen/fifty_five_dp</item>
        <item name="android:layout_height">@dimen/thirty_three_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/eight_dp</item>
    </style>

    <style name="Widget.AppTheme.IconOnDetailCard" parent="">
        <item name="android:layout_width">@dimen/sixteen_dp</item>
        <item name="android:layout_height">@dimen/sixteen_dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/four_dp</item>
    </style>

    <style name="Widget.AppTheme.TicketsOffers.BotNavBar" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/color_0c0c0c</item>
        <item name="itemIconTint">@color/color_selection_menu_item</item>
        <item name="itemTextColor">@color/color_selection_menu_item</item>
        <item name="itemBackground">@color/custom_transparent</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/Widget.AppTheme.ItemTextStyleBotNavBar</item>
        <item name="itemTextAppearanceInactive">@style/Widget.AppTheme.ItemTextStyleBotNavBar</item>
    </style>

    <style name="Widget.AppTheme.ItemTextStyleBotNavBar" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/ten_sp</item>
    </style>

</resources>