<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.TicketsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/zero_dp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@color/ripple_button</item>
        <item name="iconPadding">@dimen/sixteen_dp</item>
        <item name="android:paddingTop">@dimen/zero_dp</item>
        <item name="android:paddingBottom">@dimen/zero_dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/custom_transparent</item>
    </style>

    <style name="Widget.AppTheme.TicketsActionButton" parent="Widget.AppTheme.TicketsButton">
        <item name="android:checkable">true</item>
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="iconTint">@color/color_selection_menu_item</item>
    </style>

    <style name="Widget.AppTheme.UnderlinedTextField" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/color_9f9f9f</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/seventeen_dp</item>
        <item name="android:paddingVertical">@dimen/sixteen_dp</item>
    </style>

    <style name="Widget.AppTheme.TicketsOffers.BotNavBar" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/color_0c0c0c</item>
        <item name="itemIconTint">@color/color_selection_menu_item</item>
        <item name="itemTextColor">@color/color_selection_menu_item</item>
        <item name="itemBackground">@color/custom_transparent</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/Widget.AppTheme.ItemTextStyleBotNavBar</item>
        <item name="itemTextAppearanceInactive">@style/Widget.AppTheme.ItemTextStyleBotNavBar</item>
    </style>

    <style name="Widget.AppTheme.ItemTextStyleBotNavBar" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/ten_sp</item>
    </style>

</resources>